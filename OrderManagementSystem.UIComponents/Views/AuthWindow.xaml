<dx:ThemedWindow
    x:Class="OrderManagementSystem.UIComponents.Views.AuthWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Authorization" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Background="Black" Margin="0" Padding="0" >

    <dx:ThemedWindow.Resources>
        <dx:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="10,4" />
        </Style>

        <Style TargetType="Grid">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style TargetType="{x:Type dxe:TextEdit}">
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Width" Value="200" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="5" />
        </Style>

        <Style TargetType="{x:Type dxe:PasswordBoxEdit}">
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Width" Value="200" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="5" />
        </Style>


    </dx:ThemedWindow.Resources>
    
    <Grid Margin="30" Background="#2C2C2C">
        <dx:DXTabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}" Padding="40,20">
           
            <dx:DXTabItem Header="Login" AccentColor="White" >
                <dxlc:LayoutControl Header="User Authentication" >
                    <dxlc:LayoutGroup Orientation="Vertical" >
                        <dxlc:LayoutItem>
                        <StackPanel>
                            <Label Content="Email" />
                            <dxe:TextEdit EditValue="{Binding EmailLoginText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <StackPanel>
                            <Label Content="Password" />
                                <dxe:PasswordBoxEdit TextWrapping="Wrap" EditValue="{Binding PasswordLoginText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  MaxLength="12" ShowPasswordButtonVisibility="Auto" ShowCapsLockWarningToolTip="True" />
                        </StackPanel>
                    </dxlc:LayoutItem>
                   
                    <dxlc:LayoutItem>
                        <StackPanel>
                            <Label Content="Role" />
                            <ComboBox x:Name="RoleComboBox" 
                                ItemsSource="{Binding Roles}" 
                                SelectedItem="{Binding SelectedLoginRole, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <dx:SimpleButton Content="Login" Command="{Binding LoginUserCommand}" />
                    </dxlc:LayoutItem>


                </dxlc:LayoutGroup>
            </dxlc:LayoutControl>
        </dx:DXTabItem>
        <dx:DXTabItem Header="Register" Foreground="White" Visibility="{Binding IsRegisterTabVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <dxlc:LayoutControl Header="User Authentication">

                    <dxlc:LayoutGroup Orientation="Vertical">

                    <dxlc:LayoutItem>
                        <StackPanel>
                            <Label Content="Name" />
                                <dxe:TextEdit EditValue="{Binding NameRegisterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="40" />
                        </StackPanel>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <StackPanel>
                            <Label Content="Email" />
                                <dxe:TextEdit EditValue="{Binding EmailRegisterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="26" />
                        </StackPanel>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <StackPanel>
                            <Label Content="Phone" />
                                <dxe:TextEdit EditValue="{Binding PhoneRegisterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="16" />
                        </StackPanel>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <StackPanel>
                            <Label Content="Password" />
                                <dxe:PasswordBoxEdit EditValue="{Binding PasswordRegisterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="12" ShowPasswordButtonVisibility="Auto" ShowCapsLockWarningToolTip="True" />
                        </StackPanel>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <dx:SimpleButton Content="Register" Command="{Binding RegisterUserCommand}" />
                    </dxlc:LayoutItem>


                </dxlc:LayoutGroup>
            </dxlc:LayoutControl>
        </dx:DXTabItem>
    </dx:DXTabControl>
    </Grid>
</dx:ThemedWindow>
